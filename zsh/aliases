DIR_DOTFILES="$HOME/dotfiles"
DIR_PERSONAL="$HOME/personal"

alias dotfiles="cd $DIR_DOTFILES"
alias edit-dotfiles="code $DIR_DOTFILES"

# Personal Projects
alias personal="cd $DIR_PERSONAL"
alias zlfnhmd="cd $DIR_PERSONAL/zlfnhmd"
alias edit-zlfnhmd="code $DIR_PERSONAL/zlfnhmd"
alias hms="cd $DIR_PERSONAL/help-me-setup"
alias edit-hms="code $DIR_PERSONAL/help-me-setup"

